# ===========================================
# APP CONFIGURATION
# Change APP_NAME to rename your application
# ===========================================
APP_NAME=app-transcribe
NODE_ENV=development

# ===========================================
# DATABASE (PostgreSQL)
# ===========================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres_secret_change_me
POSTGRES_DB=app_transcribe
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Connection string for Prisma
DATABASE_URL=postgresql://postgres:postgres_secret_change_me@postgres:5432/app_transcribe?schema=public

# ===========================================
# STORAGE (MinIO / S3-compatible)
# Note: Using port 9002/9003 to avoid conflict with Cobalt
# ===========================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minio_secret_change_me
MINIO_PORT=9002
MINIO_CONSOLE_PORT=9003
MINIO_USE_SSL=false
MINIO_BUCKET=videos

# S3 SDK Configuration (for Next.js app)
S3_ENDPOINT=http://minio:9002
S3_PUBLIC_ENDPOINT=http://localhost:9002
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minio_secret_change_me
S3_BUCKET=videos
S3_REGION=us-east-1

# ===========================================
# COBALT (Video Downloader)
# Supports: YouTube, TikTok, Instagram, LinkedIn
# ===========================================
COBALT_API_URL=http://cobalt:9000

# ===========================================
# VIDEO COMPRESSION
# Reduce storage costs with FFmpeg compression
# ===========================================
VIDEO_COMPRESSION_ENABLED=true
VIDEO_MAX_RESOLUTION=720
VIDEO_BITRATE=1500k
VIDEO_CRF=28
AUDIO_BITRATE=128k

# ===========================================
# NEXT.JS PUBLIC VARIABLES
# These are exposed to the browser
# ===========================================
NEXT_PUBLIC_APP_NAME=app-transcribe
NEXT_PUBLIC_APP_URL=http://localhost:3000
